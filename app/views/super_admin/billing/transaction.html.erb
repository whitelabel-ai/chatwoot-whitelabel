<% content_for :page_title do %>
  Transaction Details - #<%= @transaction.id %>
<% end %>

<div class="row">
  <div class="medium-12 columns">
    <div class="page-top-bar">
      <h2 class="page-title">Transaction #<%= @transaction.id %></h2>
      <div class="page-top-bar__actions">
        <%= link_to "Back to Transactions", super_admin_billing_transactions_path, class: "button secondary" %>
        <%= link_to "View Account", super_admin_billing_show_path(@transaction.account), class: "button secondary" %>
        <% if @transaction.status == 'pending' %>
          <%= link_to "Mark as Successful", super_admin_billing_mark_transaction_successful_path(@transaction), 
                      method: :patch, 
                      class: "button success",
                      confirm: "Mark this transaction as successful?" %>
          <%= link_to "Mark as Failed", super_admin_billing_mark_transaction_failed_path(@transaction), 
                      method: :patch, 
                      class: "button alert",
                      confirm: "Mark this transaction as failed?" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <!-- Transaction Details -->
  <div class="medium-8 columns">
    <div class="card">
      <div class="card-header">
        <h3>Transaction Information</h3>
        <span class="badge <%= @transaction.status %> large">
          <%= @transaction.status.humanize %>
        </span>
      </div>
      <div class="card-body">
        <div class="transaction-details-grid">
          <div class="detail-section">
            <h4>Basic Information</h4>
            <div class="detail-grid">
              <div class="detail-item">
                <label>Transaction ID:</label>
                <span class="transaction-id">#<%= @transaction.id %></span>
              </div>
              
              <div class="detail-item">
                <label>Amount:</label>
                <span class="amount"><%= number_to_currency(@transaction.amount) %> <%= @transaction.currency %></span>
              </div>
              
              <div class="detail-item">
                <label>Status:</label>
                <span class="badge <%= @transaction.status %>"><%= @transaction.status.humanize %></span>
              </div>
              
              <div class="detail-item">
                <label>Payment Gateway:</label>
                <span><%= @transaction.payment_gateway.humanize %></span>
              </div>
              
              <div class="detail-item">
                <label>Gateway Transaction ID:</label>
                <span class="gateway-id">
                  <% if @transaction.gateway_transaction_id.present? %>
                    <%= @transaction.gateway_transaction_id %>
                  <% else %>
                    <em>Not provided</em>
                  <% end %>
                </span>
              </div>
              
              <div class="detail-item">
                <label>Created:</label>
                <span><%= @transaction.created_at.strftime('%B %d, %Y at %I:%M %p') %></span>
              </div>
              
              <div class="detail-item">
                <label>Last Updated:</label>
                <span><%= @transaction.updated_at.strftime('%B %d, %Y at %I:%M %p') %></span>
              </div>
            </div>
          </div>
          
          <% if @transaction.status == 'failed' && @transaction.failure_reason.present? %>
            <div class="detail-section failure-section">
              <h4>Failure Information</h4>
              <div class="failure-details">
                <div class="detail-item">
                  <label>Failure Reason:</label>
                  <span class="failure-reason"><%= @transaction.failure_reason %></span>
                </div>
              </div>
            </div>
          <% end %>
          
          <% if @transaction.metadata.present? %>
            <div class="detail-section">
              <h4>Additional Metadata</h4>
              <div class="metadata-container">
                <pre class="metadata-json"><%= JSON.pretty_generate(@transaction.metadata) %></pre>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Account Information -->
    <div class="card">
      <div class="card-header">
        <h3>Account Information</h3>
      </div>
      <div class="card-body">
        <div class="account-details">
          <div class="account-header">
            <div class="account-info">
              <h4><%= @transaction.account.name %></h4>
              <span class="account-id">Account #<%= @transaction.account.id %></span>
            </div>
            <div class="account-status">
              <span class="badge <%= @transaction.account.status == 'active' ? 'success' : 'danger' %>">
                <%= @transaction.account.status.humanize %>
              </span>
            </div>
          </div>
          
          <div class="account-stats-grid">
            <div class="stat-item">
              <label>Current Plan:</label>
              <span>
                <% if @transaction.account.current_subscription&.billing_plan %>
                  <%= @transaction.account.current_subscription.billing_plan.name %>
                <% else %>
                  <em>No active plan</em>
                <% end %>
              </span>
            </div>
            
            <div class="stat-item">
              <label>Messages Used This Month:</label>
              <span><%= number_with_delimiter(@transaction.account.messages_used_this_month) %></span>
            </div>
            
            <div class="stat-item">
              <label>Message Limit:</label>
              <span><%= number_with_delimiter(@transaction.account.messages_limit) %></span>
            </div>
            
            <div class="stat-item">
              <label>Usage Percentage:</label>
              <span>
                <div class="usage-bar">
                  <div class="usage-fill" style="width: <%= @transaction.account.usage_percentage %>%"></div>
                  <span class="usage-text"><%= @transaction.account.usage_percentage.round(1) %>%</span>
                </div>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Plan Information -->
    <% if @transaction.billing_plan %>
      <div class="card">
        <div class="card-header">
          <h3>Plan Information</h3>
        </div>
        <div class="card-body">
          <div class="plan-details">
            <div class="plan-header">
              <h4><%= @transaction.billing_plan.name %></h4>
              <span class="plan-price"><%= number_to_currency(@transaction.billing_plan.price) %>/<%= @transaction.billing_plan.currency %> month</span>
            </div>
            
            <div class="plan-info-grid">
              <div class="plan-item">
                <label>Monthly Message Limit:</label>
                <span><%= number_with_delimiter(@transaction.billing_plan.monthly_message_limit) %> messages</span>
              </div>
              
              <div class="plan-item">
                <label>Plan Status:</label>
                <span class="badge <%= @transaction.billing_plan.active? ? 'success' : 'danger' %>">
                  <%= @transaction.billing_plan.active? ? 'Active' : 'Inactive' %>
                </span>
              </div>
              
              <% if @transaction.billing_plan.description.present? %>
                <div class="plan-item full-width">
                  <label>Description:</label>
                  <span><%= @transaction.billing_plan.description %></span>
                </div>
              <% end %>
            </div>
            
            <% if @transaction.billing_plan.features.present? %>
              <div class="plan-features">
                <h5>Plan Features</h5>
                <div class="features-list">
                  <% @transaction.billing_plan.features.each do |key, value| %>
                    <div class="feature-item">
                      <span class="feature-key"><%= key.humanize %>:</span>
                      <span class="feature-value"><%= value %></span>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
  <!-- Sidebar -->
  <div class="medium-4 columns">
    <!-- Transaction Timeline -->
    <div class="card">
      <div class="card-header">
        <h3>Transaction Timeline</h3>
      </div>
      <div class="card-body">
        <div class="timeline">
          <div class="timeline-item">
            <div class="timeline-marker created"></div>
            <div class="timeline-content">
              <h5>Transaction Created</h5>
              <p><%= @transaction.created_at.strftime('%B %d, %Y at %I:%M %p') %></p>
              <small>Initial transaction record created</small>
            </div>
          </div>
          
          <% if @transaction.status == 'successful' %>
            <div class="timeline-item">
              <div class="timeline-marker success"></div>
              <div class="timeline-content">
                <h5>Payment Successful</h5>
                <p><%= @transaction.updated_at.strftime('%B %d, %Y at %I:%M %p') %></p>
                <small>Payment processed successfully</small>
              </div>
            </div>
          <% elsif @transaction.status == 'failed' %>
            <div class="timeline-item">
              <div class="timeline-marker failed"></div>
              <div class="timeline-content">
                <h5>Payment Failed</h5>
                <p><%= @transaction.updated_at.strftime('%B %d, %Y at %I:%M %p') %></p>
                <% if @transaction.failure_reason.present? %>
                  <small><%= @transaction.failure_reason %></small>
                <% else %>
                  <small>Payment processing failed</small>
                <% end %>
              </div>
            </div>
          <% else %>
            <div class="timeline-item">
              <div class="timeline-marker pending"></div>
              <div class="timeline-content">
                <h5>Payment Pending</h5>
                <p>Awaiting payment confirmation</p>
                <small>Transaction is being processed</small>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Related Transactions -->
    <div class="card">
      <div class="card-header">
        <h3>Related Transactions</h3>
      </div>
      <div class="card-body">
        <% related_transactions = @transaction.account.billing_transactions.where.not(id: @transaction.id).order(created_at: :desc).limit(5) %>
        <% if related_transactions.any? %>
          <div class="related-transactions">
            <% related_transactions.each do |transaction| %>
              <div class="related-transaction">
                <div class="transaction-info">
                  <span class="transaction-id">#<%= transaction.id %></span>
                  <span class="transaction-amount"><%= number_to_currency(transaction.amount) %></span>
                </div>
                <div class="transaction-meta">
                  <span class="badge <%= transaction.status %> small">
                    <%= transaction.status.humanize %>
                  </span>
                  <small class="transaction-date"><%= transaction.created_at.strftime('%m/%d/%Y') %></small>
                </div>
              </div>
            <% end %>
          </div>
          <%= link_to "View All Transactions", super_admin_billing_transactions_path(search: @transaction.account.name), class: "button tiny secondary full-width" %>
        <% else %>
          <p class="no-data">No other transactions found for this account.</p>
        <% end %>
      </div>
    </div>
    
    <!-- Quick Actions -->
    <div class="card">
      <div class="card-header">
        <h3>Quick Actions</h3>
      </div>
      <div class="card-body">
        <div class="quick-actions">
          <%= link_to "View Account Details", super_admin_billing_show_path(@transaction.account), class: "button secondary full-width" %>
          
          <% if @transaction.billing_plan %>
            <%= link_to "View Plan Details", super_admin_billing_plan_path(@transaction.billing_plan), class: "button secondary full-width" %>
          <% end %>
          
          <%= link_to "Account Transactions", super_admin_billing_transactions_path(search: @transaction.account.name), class: "button secondary full-width" %>
          
          <% if @transaction.status == 'pending' %>
            <div class="action-divider"></div>
            <%= link_to "Mark as Successful", super_admin_billing_mark_transaction_successful_path(@transaction), 
                        method: :patch, 
                        class: "button success full-width",
                        confirm: "Mark this transaction as successful? This will update the account's subscription." %>
            <%= link_to "Mark as Failed", super_admin_billing_mark_transaction_failed_path(@transaction), 
                        method: :patch, 
                        class: "button alert full-width",
                        confirm: "Mark this transaction as failed? This action cannot be undone." %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

