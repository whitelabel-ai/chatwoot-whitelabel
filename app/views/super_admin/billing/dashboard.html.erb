<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
// Chart configurations
const chartColors = {
  primary: '#007cba',
  success: '#4CAF50',
  warning: '#ff9800',
  danger: '#f44336',
  info: '#2196F3',
  secondary: '#6c757d'
};

// Revenue Chart
const revenueCtx = document.getElementById('revenueChart');
if (revenueCtx) {
  const revenueChart = new Chart(revenueCtx, {
    type: 'line',
    data: {
      labels: <%= raw (@dashboard_data[:revenue_chart]&.dig(:labels) || []).to_json %>,
      datasets: [{
        label: 'Daily Revenue',
        data: <%= raw (@dashboard_data[:revenue_chart]&.dig(:data) || []).to_json %>,
        borderColor: chartColors.primary,
        backgroundColor: chartColors.primary + '20',
        tension: 0.4,
        fill: true,
        pointBackgroundColor: chartColors.primary,
        pointBorderColor: '#fff',
        pointBorderWidth: 2,
        pointRadius: 4
      }]
    },
    options: {
      responsive: true,
      plugins: {
        legend: {
          display: false
        },
        tooltip: {
          mode: 'index',
          intersect: false,
          callbacks: {
            label: function(context) {
              return 'Revenue: $' + context.parsed.y.toLocaleString();
            }
          }
        }
      },
      scales: {
        x: {
          grid: {
            display: false
          }
        },
        y: {
          beginAtZero: true,
          grid: {
            color: '#f0f0f0'
          },
          ticks: {
            callback: function(value) {
              return '$' + value.toLocaleString();
            }
          }
        }
      },
      interaction: {
        intersect: false,
        mode: 'index'
      }
    }
  });
  
  // Chart period toggle
  document.querySelectorAll('.chart-toggle').forEach(button => {
    button.addEventListener('click', function() {
      document.querySelectorAll('.chart-toggle').forEach(btn => btn.classList.remove('active'));
      this.classList.add('active');
      // Update chart data based on period
      updateRevenueChart(this.dataset.period);
    });
  });
}

// Plan Distribution Chart
const planCtx = document.getElementById('planDistributionChart');
if (planCtx) {
  new Chart(planCtx, {
    type: 'doughnut',
    data: {
      labels: <%= raw (@dashboard_data[:plan_distribution]&.map { |p| p[:name] } || []).to_json %>,
      datasets: [{
        data: <%= raw (@dashboard_data[:plan_distribution]&.map { |p| p[:count] } || []).to_json %>,
        backgroundColor: <%= raw (@dashboard_data[:plan_distribution]&.map { |p| p[:color] } || []).to_json %>,
        borderWidth: 2,
        borderColor: '#fff'
      }]
    },
    options: {
      responsive: true,
      plugins: {
        legend: {
          display: false
        },
        tooltip: {
          callbacks: {
            label: function(context) {
              const total = context.dataset.data.reduce((a, b) => a + b, 0);
              const percentage = ((context.parsed / total) * 100).toFixed(1);
              return context.label + ': ' + context.parsed + ' accounts (' + percentage + '%)';
            }
          }
        }
      },
      cutout: '60%'
    }
  });
}

// Usage Distribution Chart
const usageCtx = document.getElementById('usageDistributionChart');
if (usageCtx) {
  new Chart(usageCtx, {
    type: 'bar',
    data: {
      labels: ['0-20%', '21-40%', '41-60%', '61-80%', '81-100%', '>100%'],
      datasets: [{
        label: 'Accounts',
        data: <%= raw (@dashboard_data[:usage_distribution] || []).to_json %>,
        backgroundColor: [
          chartColors.info,
          chartColors.success,
          chartColors.primary,
          chartColors.warning,
          chartColors.danger,
          '#8e24aa'
        ],
        borderWidth: 0
      }]
    },
    options: {
      responsive: true,
      plugins: {
        legend: {
          display: false
        }
      },
      scales: {
        x: {
          grid: {
            display: false
          }
        },
        y: {
          beginAtZero: true,
          grid: {
            color: '#f0f0f0'
          },
          ticks: {
            stepSize: 1
          }
        }
      }
    }
  });
}

function updateRevenueChart(period) {
  // This would typically make an AJAX request to get new data
  console.log('Updating revenue chart for period:', period);
}

// Auto-refresh dashboard data every 5 minutes
setInterval(function() {
  // This would refresh the dashboard data
  console.log('Auto-refreshing dashboard data...');
}, 300000);
</script>

