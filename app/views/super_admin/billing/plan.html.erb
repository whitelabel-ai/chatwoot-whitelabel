<% content_for :page_title do %>
  Plan Details - <%= @plan.name %>
<% end %>

<div class="row">
  <div class="medium-12 columns">
    <div class="page-top-bar">
      <h2 class="page-title">Plan Details: <%= @plan.name %></h2>
      <div class="page-top-bar__actions">
        <%= link_to "Back to Plans", super_admin_billing_plans_path, class: "button secondary" %>
        <%= link_to "Edit Plan", edit_super_admin_billing_plan_path(@plan), class: "button primary" %>
        <% if @plan.accounts.empty? %>
          <%= link_to "Delete Plan", super_admin_billing_plan_path(@plan), 
                      method: :delete, 
                      class: "button alert",
                      confirm: "Are you sure you want to delete this plan?" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <!-- Plan Information -->
  <div class="medium-8 columns">
    <div class="card">
      <div class="card-header">
        <h3>Plan Information</h3>
        <span class="badge <%= @plan.active? ? 'success' : 'danger' %>">
          <%= @plan.active? ? 'Active' : 'Inactive' %>
        </span>
      </div>
      <div class="card-body">
        <div class="plan-details-grid">
          <div class="detail-item">
            <label>Plan Name:</label>
            <span><%= @plan.name %></span>
          </div>
          
          <div class="detail-item">
            <label>Monthly Message Limit:</label>
            <span><%= number_with_delimiter(@plan.monthly_message_limit) %> messages</span>
          </div>
          
          <div class="detail-item">
            <label>Price:</label>
            <span><%= number_to_currency(@plan.price) %> <%= @plan.currency %>/month</span>
          </div>
          
          <div class="detail-item">
            <label>Currency:</label>
            <span><%= @plan.currency %></span>
          </div>
          
          <% if @plan.payment_link_url.present? %>
            <div class="detail-item">
              <label>Payment Link:</label>
              <span><%= link_to @plan.payment_link_url, @plan.payment_link_url, target: "_blank", class: "external-link" %></span>
            </div>
          <% end %>
          
          <div class="detail-item">
            <label>Created:</label>
            <span><%= @plan.created_at.strftime('%B %d, %Y at %I:%M %p') %></span>
          </div>
          
          <div class="detail-item">
            <label>Last Updated:</label>
            <span><%= @plan.updated_at.strftime('%B %d, %Y at %I:%M %p') %></span>
          </div>
        </div>
        
        <% if @plan.description.present? %>
          <div class="plan-description">
            <h4>Description</h4>
            <p><%= @plan.description %></p>
          </div>
        <% end %>
        
        <% if @plan.features.present? %>
          <div class="plan-features">
            <h4>Features</h4>
            <div class="features-grid">
              <% @plan.features.each do |key, value| %>
                <div class="feature-item">
                  <span class="feature-key"><%= key.humanize %>:</span>
                  <span class="feature-value"><%= value %></span>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    
    <!-- Accounts using this plan -->
    <div class="card">
      <div class="card-header">
        <h3>Accounts Using This Plan (<%= @plan.accounts.count %>)</h3>
      </div>
      <div class="card-body">
        <% if @plan.accounts.any? %>
          <div class="accounts-table-container">
            <table class="accounts-table">
              <thead>
                <tr>
                  <th>Account Name</th>
                  <th>Status</th>
                  <th>Messages Used</th>
                  <th>Usage %</th>
                  <th>Subscription Status</th>
                  <th>Last Payment</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @plan.accounts.includes(:current_subscription, :billing_transactions).each do |account| %>
                  <% subscription = account.current_subscription %>
                  <% last_transaction = account.billing_transactions.successful.order(created_at: :desc).first %>
                  <tr>
                    <td>
                      <div class="account-info">
                        <strong><%= account.name %></strong>
                        <small class="account-id">#<%= account.id %></small>
                      </div>
                    </td>
                    <td>
                      <span class="badge <%= account.status == 'active' ? 'success' : 'danger' %>">
                        <%= account.status.humanize %>
                      </span>
                    </td>
                    <td>
                      <%= number_with_delimiter(account.messages_used_this_month) %> / 
                      <%= number_with_delimiter(account.messages_limit) %>
                    </td>
                    <td>
                      <div class="usage-bar">
                        <div class="usage-fill" style="width: <%= account.usage_percentage %>%"></div>
                        <span class="usage-text"><%= account.usage_percentage.round(1) %>%</span>
                      </div>
                    </td>
                    <td>
                      <% if subscription %>
                        <span class="badge <%= subscription.status == 'active' ? 'success' : 'warning' %>">
                          <%= subscription.status.humanize %>
                        </span>
                        <small class="subscription-dates">
                          <%= subscription.current_period_start.strftime('%m/%d') %> - 
                          <%= subscription.current_period_end.strftime('%m/%d/%Y') %>
                        </small>
                      <% else %>
                        <span class="badge danger">No Subscription</span>
                      <% end %>
                    </td>
                    <td>
                      <% if last_transaction %>
                        <%= number_to_currency(last_transaction.amount) %>
                        <small class="transaction-date">
                          <%= last_transaction.created_at.strftime('%m/%d/%Y') %>
                        </small>
                      <% else %>
                        <span class="no-payment">No payments</span>
                      <% end %>
                    </td>
                    <td>
                      <%= link_to "View", super_admin_billing_show_path(account), class: "button tiny secondary" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="empty-state">
            <h4>No accounts using this plan</h4>
            <p>This plan is not currently being used by any accounts.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <!-- Statistics Sidebar -->
  <div class="medium-4 columns">
    <!-- Plan Statistics -->
    <div class="card">
      <div class="card-header">
        <h3>Plan Statistics</h3>
      </div>
      <div class="card-body">
        <div class="stats-grid">
          <div class="stat-card">
            <div class="stat-number"><%= @plan.accounts.count %></div>
            <div class="stat-label">Active Accounts</div>
          </div>
          
          <div class="stat-card">
            <div class="stat-number">
              <%= number_to_currency(@plan.accounts.joins(:billing_transactions).where(billing_transactions: { status: :successful }).sum('billing_transactions.amount')) %>
            </div>
            <div class="stat-label">Total Revenue</div>
          </div>
          
          <div class="stat-card">
            <div class="stat-number">
              <%= number_to_currency(@plan.accounts.joins(:billing_transactions).where(billing_transactions: { status: :successful, created_at: 1.month.ago..Time.current }).sum('billing_transactions.amount')) %>
            </div>
            <div class="stat-label">This Month Revenue</div>
          </div>
          
          <div class="stat-card">
            <div class="stat-number">
              <%= number_with_delimiter(@plan.accounts.joins(:message_consumption_logs).where(message_consumption_logs: { created_at: 1.month.ago..Time.current }).sum('message_consumption_logs.message_count')) %>
            </div>
            <div class="stat-label">Messages This Month</div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Usage Distribution -->
    <div class="card">
      <div class="card-header">
        <h3>Usage Distribution</h3>
      </div>
      <div class="card-body">
        <% if @plan.accounts.any? %>
          <% usage_ranges = {
            'Under 25%' => @plan.accounts.select { |a| a.usage_percentage < 25 }.count,
            '25-50%' => @plan.accounts.select { |a| a.usage_percentage >= 25 && a.usage_percentage < 50 }.count,
            '50-75%' => @plan.accounts.select { |a| a.usage_percentage >= 50 && a.usage_percentage < 75 }.count,
            '75-90%' => @plan.accounts.select { |a| a.usage_percentage >= 75 && a.usage_percentage < 90 }.count,
            'Over 90%' => @plan.accounts.select { |a| a.usage_percentage >= 90 }.count
          } %>
          
          <div class="usage-distribution">
            <% usage_ranges.each do |range, count| %>
              <div class="usage-range">
                <div class="range-info">
                  <span class="range-label"><%= range %></span>
                  <span class="range-count"><%= count %> accounts</span>
                </div>
                <div class="range-bar">
                  <div class="range-fill" style="width: <%= @plan.accounts.count > 0 ? (count.to_f / @plan.accounts.count * 100) : 0 %>%"></div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="no-data">No usage data available</p>
        <% end %>
      </div>
    </div>
    
    <!-- Recent Transactions -->
    <div class="card">
      <div class="card-header">
        <h3>Recent Transactions</h3>
      </div>
      <div class="card-body">
        <% recent_transactions = @plan.accounts.joins(:billing_transactions).includes(:billing_transactions).map(&:billing_transactions).flatten.sort_by(&:created_at).reverse.first(5) %>
        <% if recent_transactions.any? %>
          <div class="transactions-list">
            <% recent_transactions.each do |transaction| %>
              <div class="transaction-item">
                <div class="transaction-info">
                  <strong><%= transaction.account.name %></strong>
                  <span class="transaction-amount"><%= number_to_currency(transaction.amount) %></span>
                </div>
                <div class="transaction-meta">
                  <span class="badge <%= transaction.status == 'successful' ? 'success' : transaction.status == 'failed' ? 'danger' : 'warning' %>">
                    <%= transaction.status.humanize %>
                  </span>
                  <small class="transaction-date"><%= transaction.created_at.strftime('%m/%d/%Y') %></small>
                </div>
              </div>
            <% end %>
          </div>
          <%= link_to "View All Transactions", super_admin_billing_transactions_path(plan_id: @plan.id), class: "button tiny secondary full-width" %>
        <% else %>
          <p class="no-data">No transactions found</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

